---
import BaseLayout from '../layouts/BaseLayout.astro';
import ParallaxSection from '../components/ParallaxSection.astro';
import { Icon } from 'astro-icon/components';

const values = [
    { title: "Innovation", icon: "mdi:lightbulb-on-outline", description: "We constantly push the boundaries of what is possible." },
    { title: "Integrity", icon: "mdi:handshake-outline", description: "We believe in honest, transparent partnerships." },
    { title: "Excellence", icon: "mdi:star-outline", description: "We strive for perfection in every pixel and line of code." },
];

const team = [
    { name: "Sarah Jenkins", role: "CEO & Founder", image: "https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?auto=format&fit=crop&q=80&w=800" },
    { name: "David Chen", role: "CTO", image: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?auto=format&fit=crop&q=80&w=800" },
    { name: "Elena Rodriquez", role: "Head of Design", image: "https://images.unsplash.com/photo-1580489944761-15a19d654956?auto=format&fit=crop&q=80&w=800" },
];
---

<BaseLayout title="About Us | Antigravity">
    <div class="pt-32 pb-20 px-4 md:px-12 bg-[--color-text] text-[--color-base]">
        <div class="container mx-auto">
            <h1 class="text-6xl md:text-8xl font-bold tracking-tighter mb-8">Who We Are</h1>
            <p class="text-xl md:text-2xl text-[--color-subtle] max-w-3xl">
                We are a team of visionaries, engineers, and strategists dedicated to redefining the digital landscape.
            </p>
        </div>
    </div>

    <ParallaxSection image="https://images.unsplash.com/photo-1522071820081-009f0129c71c?auto=format&fit=crop&q=80&w=2000" height="h-[50vh]">
    </ParallaxSection>

    <section class="py-20 md:py-32 bg-[--color-base]">
        <div class="container mx-auto px-4 md:px-12 grid grid-cols-1 md:grid-cols-2 gap-16">
            <div>
                <h2 class="text-4xl font-bold mb-6 tracking-tight text-[--color-text]">Our Mission</h2>
                <div class="h-1 w-20 bg-[--color-accent] mb-8"></div>
                <p class="text-lg text-[--color-text] leading-relaxed mb-6">
                    Founded in 2023, Antigravity emerged from a simple desire: to bridge the gap between complex technology and human-centric design. We believe that technology should not just function; it should inspire.
                </p>
                <p class="text-lg text-[--color-text] leading-relaxed">
                    Our methodology combines rigorous engineering standards with fluid, artistic expression, resulting in digital products that stand the test of time.
                </p>
            </div>
            <div class="grid grid-cols-1 gap-8">
                {values.map(value => (
                    <div class="flex gap-6 items-start">
                        <div class="p-3 bg-[--color-surface] rounded-full text-[--color-accent]">
                            <Icon name={value.icon} class="w-6 h-6" />
                        </div>
                        <div>
                            <h3 class="text-xl font-bold mb-2 text-[--color-text]">{value.title}</h3>
                            <p class="text-[--color-subtle]">{value.description}</p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <section class="py-20 md:py-32 bg-[--color-surface]/30">
        <div class="container mx-auto px-4 md:px-12">
            <h2 class="text-4xl font-bold mb-16 text-center tracking-tight text-[--color-text] fade-up">Meet the Minds</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-10 stagger-parent">
                {team.map(member => (
                    <div class="group stagger-child">
                        <div class="mb-6 overflow-hidden relative aspect-[3/4]">
                            <img 
                                src={member.image} 
                                alt={member.name} 
                                class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500 transform group-hover:scale-105"
                            />
                        </div>
                        <h3 class="text-2xl font-bold mb-1 text-[--color-text]">{member.name}</h3>
                        <p class="text-[--color-subtle] uppercase tracking-widest text-sm">{member.role}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

</BaseLayout>
