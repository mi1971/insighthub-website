---
export const prerender = true;
import BaseLayout from "../../layouts/BaseLayout.astro";
import ServiceCard from "../../components/ServiceCard.astro";
import ParallaxSection from "../../components/ParallaxSection.astro";

const services = [
    {
        title: "Flowjo",
        description:
            "Revolutionising workflow management with intuitive software.",
        icon: "mdi:water-outline",
        image: "/images/logo-flowjo.png",
        href: "/services/flowjo",
        logoClass: "h-24",
    },
    {
        title: "Insight Processing",
        description:
            "Australian based outsourcing and processing solutions for mortgage brokers.",
        icon: "mdi:chart-timeline-variant",
        image: "/images/logo-insight-processing.png",
        href: "/services/insight-processing",
        logoClass: "h-24",
    },
    {
        title: "Broker Growth Program",
        description:
            "Accelerating success for brokers with our tailored growth framework.",
        icon: "mdi:trending-up",
        image: "/images/logo-bgf.png",
        href: "/services/broker-growth-program",
        logoClass: "h-24",
    },
    {
        title: "Flowjo For Travel",
        description: "CRM made for Travel Agents.",
        icon: "mdi:airplane-takeoff",
        image: "/images/logo-flowjo-travel.png",
        href: "/services/flowjo-for-travel",
        logoClass: "h-28",
    },
    {
        title: "Work With Linda",
        description:
            "Driving positive change through mindful business practices.",
        icon: "mdi:account-star-outline",
        image: "/images/logo-work-with-linda.png",
        href: "/services/work-with-linda",
    },
    {
        title: "FileCheck",
        description:
            "Collect, check, and organise client documents without the endless follow-ups.",
        icon: "mdi:file-check-outline",
        image: "/images/logo-filecheck.png",
        href: "/services/filecheck",
    },
];
---

<BaseLayout title="Our Services | Antigravity">
    <div class="pt-32 pb-20 px-4 md:px-12 bg-primary text-main">
        <div class="container mx-auto">
            <h1 class="text-6xl md:text-8xl font-bold tracking-tighter mb-8">
                Our Services
            </h1>
            <p class="text-xl md:text-2xl text-subtle max-w-3xl">
                Comprehensive solutions designed to propel your business
                forward.
            </p>
        </div>
    </div>

    <section class="py-20 md:py-32 bg-main">
        <div class="container mx-auto px-4 md:px-12">
            <div
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-px bg-subtle/20 border border-subtle/20"
            >
                {services.map((service) => <ServiceCard {...service} />)}
            </div>
        </div>
    </section>

    <ParallaxSection
        image="/footer-bg.jpg"
        overlayClass="bg-accent/50 mix-blend-multiply"
    >
        <div class="absolute inset-0 bg-accent/40 z-0"></div>
        <div class="absolute inset-0 flex items-center justify-center z-10">
            <div class="text-center">
                <h2 class="text-4xl md:text-6xl font-bold text-main mb-8">
                    Not sure what you need?
                </h2>
                <a
                    href="/contact"
                    class="inline-block px-10 py-5 bg-main text-primary font-bold uppercase tracking-widest hover:bg-accent hover:text-main transition-all duration-300"
                >
                    Talk to an Expert
                </a>
            </div>
        </div>
    </ParallaxSection>
</BaseLayout>
```
